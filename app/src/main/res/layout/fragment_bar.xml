<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/fragment_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/image_rect_oval"
        android:text="@string/fragment_number"
        android:textColor="@color/ColorBlue"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/image_rect_oval"
        app:layout_constraintEnd_toEndOf="@+id/image_rect_oval"
        app:layout_constraintStart_toStartOf="@+id/image_rect_oval"
        app:layout_constraintTop_toTopOf="@+id/image_rect_oval" />


    <ImageButton
        android:id="@+id/btn_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_rect_oval"
        android:background="@drawable/oval_blue"
        app:layout_constraintBottom_toBottomOf="@+id/image_rect_oval"
        app:layout_constraintEnd_toEndOf="@+id/spacer2"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="@+id/spacer2"
        app:layout_constraintTop_toTopOf="@+id/image_rect_oval"
        app:srcCompat="@drawable/plus" />


    <ImageButton
        android:id="@+id/btn_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_rect_oval"
        android:background="@drawable/oval_blue"
        app:layout_constraintBottom_toBottomOf="@+id/image_rect_oval"
        app:layout_constraintEnd_toEndOf="@+id/spacer1"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="@+id/spacer1"
        app:layout_constraintTop_toTopOf="@+id/image_rect_oval"
        app:srcCompat="@drawable/minus" />

    <androidx.legacy.widget.Space
        android:id="@+id/spacer1"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_above="@+id/image_rect_oval"
        app:layout_constraintBottom_toBottomOf="@+id/image_rect_oval"
        app:layout_constraintEnd_toStartOf="@+id/image_rect_oval"
        app:layout_constraintStart_toStartOf="@+id/image_rect_oval"
        app:layout_constraintTop_toTopOf="@+id/image_rect_oval" />

    <androidx.legacy.widget.Space
        android:id="@+id/spacer2"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_above="@+id/image_rect_oval"
        app:layout_constraintBottom_toBottomOf="@+id/image_rect_oval"
        app:layout_constraintEnd_toEndOf="@+id/image_rect_oval"
        app:layout_constraintStart_toEndOf="@+id/image_rect_oval"
        app:layout_constraintTop_toTopOf="@+id/image_rect_oval" />

    <ImageView
        android:id="@+id/image_rect_oval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rectangle" />


</androidx.constraintlayout.widget.ConstraintLayout>