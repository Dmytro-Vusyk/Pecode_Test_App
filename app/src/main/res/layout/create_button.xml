<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageButton
        android:id="@+id/btn_create_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/oval_copy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_create_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_notification_button"
        android:textColor="@color/colorWhite"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_create_notification"
        app:layout_constraintEnd_toEndOf="@+id/btn_create_notification"
        app:layout_constraintStart_toStartOf="@+id/btn_create_notification"
        app:layout_constraintTop_toTopOf="@+id/btn_create_notification" />

</android.support.constraint.ConstraintLayout>