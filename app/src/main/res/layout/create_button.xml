<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageButton
        android:id="@+id/btn_create_notification"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/oval_copy"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_create_notification"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="@string/create_notification_button"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="@+id/btn_create_notification"
        app:layout_constraintEnd_toEndOf="@+id/btn_create_notification"
        app:layout_constraintStart_toStartOf="@+id/btn_create_notification"
        app:layout_constraintTop_toTopOf="@+id/btn_create_notification" />

</androidx.constraintlayout.widget.ConstraintLayout>